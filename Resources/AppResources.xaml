                </Style.Triggers>-->
    </Style>

    <Style x:Key="ToolBarButtonSeperator"
           TargetType="{x:Type Rectangle}">
        <Setter Property="Width"
                Value="1" />
        <Setter Property="Margin"
                Value="7 3" />
        <Setter Property="Fill"
